{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es2015", "es2017", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "Icons": ["assets/icons"]
    }
  },
  "include": ["src"]
}
